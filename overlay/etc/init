#!/bin/sh

echo "Pass 1"

cat << EOF > /etc/project.json
{
    "inbounds": [
        {
            "port": $PORT,
            "settings": {
                "clients": [
                    {
                        "id": "$KEY",
                        "alterId": 64
                    }
                ],
                "disableInsecureEncryption": true 
            },
            "streamSettings": {
                "network": "ws",
                "security": "none",
                "wsSettings": {
                    "path": "$SPATH",
                    "redirect": "$REDIRECT"
                }
            },
            "protocol": "vmess",
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom"
        }
    ]
}
EOF

echo "Pass 2"

# Start the server
SHELL=/bin/ash ttyd -i lo -p $USER tmux new -A -s project & \
project -c /etc/project.json & \
wait
